<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C7DFF"
    tools:context=".MainActivity">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />


    <!-- Toolbar arriba -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Mi App" />

    <!-- Contenido principal -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Vista principal con letras -->
        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnPausa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A0B6DB"
                android:backgroundTint="#08021B"
                android:onClick="togglePausaLectura"
                android:text="Pausar Lectura" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="223dp"
                android:background="#60B7E0"
                android:gravity="center"
                android:padding="16dp"
                android:text="Selecciona una letra"
                android:textSize="20sp" />

            <GridView
                android:id="@+id/gridLetras"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_weight="1"
                android:background="#606C9E"
                android:horizontalSpacing="8dp"
                android:numColumns="3"
                android:padding="16dp"
                android:stretchMode="columnWidth"
                android:verticalSpacing="8dp" />
            <LinearLayout
                android:id="@+id/signContainer"
                android:layout_width="match_parent"
                android:layout_height="494dp"
                android:background="@color/black"
                android:gravity="center"
                android:orientation="vertical"
                android:translationY="-25dp"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:background="@color/purple_200"
                    android:src="@drawable/ic_close"
                    android:translationY="-1dp" />
                <ImageView
                    android:id="@+id/imgSign"
                    android:layout_width="374dp"
                    android:layout_height="302dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="#00FFFFFF"
                    android:scaleType="center"
                    android:translationY="-30dp" />

                <TextView
                    android:id="@+id/txtEvaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="EvaluaciÃ³n:"
                    android:textSize="18sp"
                    android:translationY="-20dp" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>
